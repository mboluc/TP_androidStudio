<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <Toolbar
            android:orientation="horizontal"
            android:background="#000"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:marginTop="1000dp"
            android:id="@+id/menu"
            />

        <TextView
            android:layout_height="50dp"
            android:layout_width="match_parent"
            android:text="ACCUEIL"
            android:textSize="35dp"
            android:gravity="center"
            tools:ignore="HardcodedText" />

        <TextView
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:text="Nos etudiants sont top :)"
            android:textSize="20dp"
            android:marginTop="50dp"/>
        <LinearLayout
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/image1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/_1"
                android:adjustViewBounds="true"
                android:margin="10dp"
                android:gravity="center"/>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:background="#7FB6E6"/>

        <TextView
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:text="Le plan de ca"
            android:textSize="20dp"/>
        <LinearLayout
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/image2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/_2"
                android:adjustViewBounds="true"
                android:margin="10dp"
                android:gravity="center"/>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:background="#7FB6E6"/>

        <TextView
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:text="J'adore ce logo "
            android:textSize="20dp"/>
        <LinearLayout
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/image3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/_3"
                android:adjustViewBounds="true"
                android:margin="10dp"
                android:gravity="center"/>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:background="#7FB6E6"/>

        <TextView
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:text="Tout le charisme represente"
            android:textSize="20dp"/>
        <LinearLayout
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/image4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/_4"
                android:adjustViewBounds="true"
                android:margin="10dp"
                android:gravity="center"/>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:background="#7FB6E6"/>

        <TextView
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:text="Le campus de SUP'PTIC Yaounde offre un air
                propris au developpement intellectuel"
            android:textSize="20dp"/>
        <LinearLayout
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/image5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/_5"
                android:adjustViewBounds="true"
                android:margin="10dp"
                android:gravity="center"/>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:background="#7FB6E6"/>

        <TextView
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:text="toute la beaute"
            android:textSize="20dp"/>
        <LinearLayout
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/image6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/_6"
                android:adjustViewBounds="true"
                android:margin="10dp"
                android:gravity="center"/>
        </LinearLayout>

    </LinearLayout>

</ScrollView>